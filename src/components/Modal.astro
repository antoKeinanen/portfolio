---
import CloseIcon from "./icons/CloseIcon.astro";

interface Props {
  id: string;
  open: boolean;
}

const { id, open }: Props = Astro.props;
---

<button onclick={`window.${id}.showModal()`}><slot name="button" /></button>

<dialog
  class="absolute h-3/4 w-3/4 flex-col justify-between rounded-xl border-2 border-zinc-50 bg-zinc-950 p-8 text-zinc-50 backdrop:bg-black backdrop:opacity-85 open:flex"
  id={id}
  open={open}
>
  <button
    class="absolute right-6 top-4 stroke-zinc-50"
    onclick={`window.${id}.close()`}
  >
    <CloseIcon size={24} />
  </button>

  <slot />
</dialog>
